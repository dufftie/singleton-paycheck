{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "singleton-paycheck",
  "title": "singleton-paycheck",
  "description": "Saves time for singletonians by counting and displaying paycheck details",
  "icon": "command-icon.png",
  "author": "dufftie",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Singleton utility",
      "description": "An utility to make singletonians life better",
      "mode": "view",
      "icon": "command-icon.png",
      "author": "dufftie",
      "categories": "utils",
      "commands": "paycheck",
      "contributors": "Artjom Dmitrijev & Silver-Stan Kruus",
      "preferences": [
        {
          "name": "togglApiKey",
          "description": "Your personal toggl api-token",
          "type": "textfield",
          "required": false,
          "title": "Your personal toggl token",
          "placeholder": "8d3dhjk42e3e4161721ad2c94862123c1e2c"
        },
        {
          "name": "targetHours",
          "description": "Amount of hours you plan to work this month",
          "type": "textfield",
          "required": true,
          "title": "Target hours",
          "placeholder": "160",
          "default": "160"
        },
        {
          "name": "hourRate",
          "description": "Amount of â‚¬ you earn per/hour in brutto",
          "type": "textfield",
          "required": true,
          "title": "Hourly brutto rate",
          "placeholder": "15"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.52.1",
    "moment": "^2.29.4",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/lodash": "^4.14.195",
    "@types/node": "18.8.3",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.4",
    "eslint": "^7.32.0",
    "lodash": "^4.17.21",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "volta": {
    "node": "20.2.0"
  }
}
